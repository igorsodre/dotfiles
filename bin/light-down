#!/bin/bash

val=$(xrandr --verbose | grep -i brightness | cut -f2 -d ' ' | head -n1)
#echo "${val:0:2}"
val=${val:2}
myscript=""
if ((val <= 40 && val != 0)); then
	echo "Min Value Reached $val"
elif ((val == 0)); then
	val="0.96"
	myscript="xrandr --output eDP1 --brightness 0.96"
	exec $myscript
else
	val=$((val-4));
	val="0.$val"
	myscript="xrandr --output eDP1 --brightness $val"
	echo $myscript
	exec $myscript

fi
