#!/bin/bash

val=$(xrandr --verbose | grep -i brightness | cut -f2 -d ' ' | head -n1)
#echo "${val:0:2}"
val=${val:2}
myscript=""
if ((val >=95 && val!=0)); then
	echo "Max Value Reached: $val"
else
	val=$((val+4));
	val="0.$val"
	myscript="xrandr --output eDP1 --brightness $val"
	echo $myscript
	exec $myscript

fi
